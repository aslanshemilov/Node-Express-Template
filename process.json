{
    "apps": [{
        "name": "Express",
        "script": "app.js",
        "log_file": "./logs/pm2/combined.outerr.log",
        "error_file": "./logs/pm2/err.log",
        "out_file": "./logs/pm2/out.log",
        "merge_logs": true,
        "interpreter_args": "--harmony",
        "watch": true,
        "ignore_watch": ["node_modules", "public", "\.git", "log", "npm-debug\.log"],
        "instances": 2,
        "exec_mode": "cluster",
        "log_date_format": "YYYY-MM-DD HH:mm Z",
        "env_development": {
            "NODE_ENV": "development",
            "NODE_PORT": 3000
        },
        "env_production": {
            "NODE_ENV": "production",
            "NODE_PORT": 80
        }
    }]
}