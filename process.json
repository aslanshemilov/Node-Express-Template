{
  "apps": [
    {
      "name": "Express",
      "script": "app.js",
      "log_file": "/var/log/pm2log/combined.outerr.log",
      "error_file": "/var/log/pm2log/err.log",
      "out_file": "/var/log/pm2log/out.log",
      "merge_logs": true,
      "interpreter_args": "--harmony",
      "watch": true,
      "ignore_watch" : ["node_modules", "public", "\.git", "log"],
      "instances": 2,
      "exec_mode": "cluster",
      "log_date_format": "YYYY-MM-DD HH:mm Z"
    }
  ]
}